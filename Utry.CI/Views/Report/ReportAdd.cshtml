@using Utry.Framework.Mvc
@model Utry.CI.Models.ReportModel
﻿@{
    ViewBag.Title = "CI | 报表信息";
}
<style>
.col-md-3{width:10%;}
</style>

<div style="margin-top:60px;">

 <div class="tab-pane" >

           @Html.JPartial("_Notifications")

          <div class="portlet ">
                           <div class="portlet-title">
                              <div class="caption">报表信息</div>
                           </div>
                           <div class="portlet-body form">
                              <!-- BEGIN FORM-->
                              <form  id="Repform" action="@Url.Action("ReportAdd", "Report")" method="post" class="form-horizontal form-bordered form-row-stripped" >
                              
                              
                                 <div class="form-body">
                                    <div class="form-group">
                                       <label class="control-label col-md-3">报表名称：</label>
                                       <div class="col-md-9">
                                          <input type="text" placeholder="请填写报表名称" class="form-control" name="ReportName" id="ReportName"  style="width:95%;" value="@Model.Report.ReportName"/>
                                       </div>
                                    </div>
                                   
                                    <div class="form-group">
                                        <label class="control-label col-md-3">报表SQL：</label>
                                        <div class="col-md-9">
                                             <textarea class="form-control" placeholder="请填写报表SQL"  rows="2" cols="20" id="ReportSQL" name="ReportSQL" style="height:100px;width:95%;">@Model.Report.ReportSQL</textarea>
                                        </div>
                                    </div>

                                 </div>


                                   <div class="form-actions fluid">
                                    <div class="row">
                                       <div class="col-md-12">
                                          <div class="col-md-offset-3 col-md-9">
                                                  <a class="btn btn-default btn-sm"  href="@Url.Action("Reportlist", "Report")">返回</a>
                                                  @if (Request.QueryString["act"] != "view")
                                                  { 
                                                     <button type="submit" id="register-submit-btn" class="btn btn-primary btn-sm">
				                                        提交 <i class="m-icon-swapright m-icon-white"></i>
				                                     </button>
                                                  }
                                          </div>
                                       </div>
                                    </div>
                                    </div>


                              </form>
                              <!-- END FORM-->  
                           </div>
                        </div>
 </div>
 <script src="/assets/plugins/jquery-1.10.2.min.js" type="text/javascript"></script>
    <script src="/Assets/plugins/jquery-validation/jquery.validate.js" type="text/javascript"></script>
	<script src="/assets/plugins/jquery-migrate-1.2.1.min.js" type="text/javascript"></script>
	<script src="/assets/plugins/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
	<script src="/assets/plugins/jquery.blockui.min.js" type="text/javascript"></script>  
	<script src="/assets/plugins/jquery.cookie.min.js" type="text/javascript"></script>
	<script src="/assets/plugins/uniform/jquery.uniform.min.js" type="text/javascript" ></script>
 	<script type="text/javascript">
 	    $(document).ready(function () {

 	        $("#Repform").validate({
 	            rules: {
 	                ReportName: { required: true },
 	                ReportSQL: { required: true }
 	            },
 	            messages: {
 	                ReportName: { required: "报表名称不能为空" },
 	                ReportSQL: { required: "报表SQL不能为空" }
 	            }
 	        });

 	    });
	</script>
</div>

